#!/bin/sh

mkdir -p /var/run/turnkey-init-fence
if [ -f /etc/default/turnkey-init-fence ]; then
    RUNAS=$(sed -n 's/^RUNAS=//p' /etc/default/turnkey-init-fence)
    if [ -n "$RUNAS" ]; then
        chown -R $RUNAS /var/run/turnkey-init-fence 
    fi
fi

cat << EOF >> /etc/ssh/sshd_config

# Please do not edit match or banner line. Commands may be added AFTER
# banner line, otherwise sudoadmin may not work as expected.
Match user "root"
#    Banner "/var/lib/inithooks/sudoadmin/root_ssh_banner"
EOF


#DEBHELPER#
exit 0
